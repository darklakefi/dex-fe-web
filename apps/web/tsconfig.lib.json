{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "vitest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],

  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "../../apps/web/.next/types/**/*.ts",
    "../../dist/apps/web/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "references": [
    {
      "path": "../../libs/utils/tsconfig.lib.json"
    },
    {
      "path": "../../libs/ui/tsconfig.lib.json"
    }
  ]
}
